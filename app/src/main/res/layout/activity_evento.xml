<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.neto.projetofinal.activitys.EventoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_dataInicial"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceLarge"
                android:text="INÍCIO"
                />
            <TextView
                android:id="@+id/textView_dataInicial_valor"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceMedium"
                android:text=""
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_dataFinal"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceLarge"
                android:text="FINAL"
                />
            <TextView
                android:id="@+id/textView_dataFinal_valor"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceMedium"
                android:text=""
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView_tipo"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_weight="@dimen/textView_key"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="?android:attr/textAppearanceLarge"
                android:text="TIPO: "
                />
            <TextView
                android:id="@+id/textView_tipo_valor"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="@dimen/textView_value"
                android:layout_height="wrap_content"
                android:maxLines="3"
                style="?android:attr/textAppearanceMedium"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView_local"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_weight="@dimen/textView_key"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceLarge"
                android:text="LOCAL: "
                />
            <TextView
                android:id="@+id/textView_local_valor"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="@dimen/textView_value"
                android:layout_height="wrap_content"
                android:maxLines="3"
                style="?android:attr/textAppearanceMedium"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView_complemento"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_weight="@dimen/textView_key"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                style="?android:attr/textAppearanceLarge"
                android:text="COMP.: "
                />
            <TextView
                android:id="@+id/textView_complemento_valor"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="@dimen/textView_value"
                android:layout_height="wrap_content"
                android:maxLines="3"
                style="?android:attr/textAppearanceMedium"
                android:text=""
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="verNoMaps"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Ver Localização no Google Maps"
            />
    </LinearLayout>

</LinearLayout>